snippet dm "display_math"
	$
		$1
	$$0

snippet __ "math subscript" A
	_($1)$0

snippet ^^ "math superscript" A
	^($1)$0

snippet sum "summation"
	sum _(${1:n = 1}) ^(${2:oo}) $0 

snippet intab "integration over [a, b]"
	integral ^(${1:oo}) _(${2:-oo}) $3 thin dif ${4:x} $0

snippet ints "integration over set"
	integral _(${1:X}) $2 thin dif ${3:x} $0

snippet to "arrow to"
	arrow.r

snippet tto "double to"
	arrows.rr

snippet abrc "angle brackets"
	angle.l $1 angle.r $0

snippet vb "vector bold"
	bold($1)$0
